<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default"
    >

    <ui:style>
        .numberEntry
        {
            width: 3em;
        }
    </ui:style>

    <g:VerticalPanel>
        <g:VerticalPanel verticalAlignment="ALIGN_TOP">

            <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
                <g:CheckBox ui:field="scaleCheckBox"><ui:msg>Include scaling</ui:msg></g:CheckBox>
                <g:DoubleBox ui:field="scaleToTextBox" ui:styleName="numberEntry">8.0</g:DoubleBox>
            </g:HorizontalPanel>

            <g:FlexTable ui:styleName="tsMathTable" ui:field="projectTable" />

        </g:VerticalPanel>
    </g:VerticalPanel>

</ui:UiBinder>

