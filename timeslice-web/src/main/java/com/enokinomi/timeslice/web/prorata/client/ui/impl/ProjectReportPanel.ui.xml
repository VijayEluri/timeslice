<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" >

    <ui:style>
        .numberEntry
        {
            width: 3em;
        }
    </ui:style>

    <g:VerticalPanel>

        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
            <g:CheckBox ui:field="scaleCheckBox">Include scaling</g:CheckBox>
            <g:TextBox ui:field="scaleToTextBox" ui:styleName="numberEntry">8</g:TextBox>
        </g:HorizontalPanel>

        <g:FlexTable ui:styleName="tsMathTable" ui:field="projectTable" />

    </g:VerticalPanel>

</ui:UiBinder>

