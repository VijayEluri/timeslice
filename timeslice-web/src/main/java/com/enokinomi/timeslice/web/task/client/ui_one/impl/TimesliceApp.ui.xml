<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:task1="urn:import:com.enokinomi.timeslice.web.task.client.ui_one.impl"
    xmlns:task2="urn:import:com.enokinomi.timeslice.web.task.client.ui.impl"
    xmlns:job="urn:import:com.enokinomi.timeslice.web.appjob.client.ui.impl"
    >

    <ui:style>

    </ui:style>

    <g:DockLayoutPanel unit="EM">

        <g:center>
            <g:TabLayoutPanel barHeight="2" barUnit="EM">

                <g:tab>
                    <g:customHeader>
                        <g:Anchor ui:field="inputLink">Input</g:Anchor>
                    </g:customHeader>

                    <task1:InputPanel ui:field="inputPanel" />

                </g:tab>

                <g:tab>
                    <g:customHeader>
                        <g:Anchor ui:field="reportLink">Reports</g:Anchor>
                    </g:customHeader>

                    <task2:ReportPanel ui:field="reportPanel" />

                </g:tab>

                <g:tab>
                    <g:customHeader>
                        <g:Anchor ui:field="optionsLink">Options</g:Anchor>
                    </g:customHeader>

                    <task2:OptionsPanel ui:field="optionsPanel" />
                </g:tab>

                <g:tab>
                    <g:customHeader>
                        <g:Anchor ui:field="jobsLink">Jobs</g:Anchor>
                    </g:customHeader>

                    <job:AppJobPanel ui:field="appJobPanel" />
                </g:tab>

            </g:TabLayoutPanel>
        </g:center>

        <g:south size="4">
            <g:HorizontalPanel spacing="15">
                <g:HTML ui:field="issuesLink">[Issues Link]</g:HTML>
                <g:Anchor ui:field="logoutAnchor">Logout</g:Anchor>
                <g:Label ui:field="serverInfoLabel">[Service Info]</g:Label>
            </g:HorizontalPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>
